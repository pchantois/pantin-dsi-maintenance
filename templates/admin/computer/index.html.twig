{% extends 'base.html.twig' %}

{% block title %}Computer index{% endblock %}

{% block body %}
    <h1>Computer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Ip</th>
                <th>Type</th>
                <th>Os</th>
                <th>Environnement</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for computer in computers %}
            <tr>
                <td>{{ computer.id }}</td>
                <td>{{ computer.libelle }}</td>
                <td>{{ computer.ip }}</td>
                <td>{{ computer.type }}</td>
                <td>{{ computer.os }}</td>
                <td>{{ computer.environnement }}</td>
                <td>
                    <a href="{{ path('admin_computer_show', {'id': computer.id}) }}">show</a>
                    <a href="{{ path('admin_computer_edit', {'id': computer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_computer_new') }}">Create new</a>
{% endblock %}
